trigger BeforeGenerateNewDeal on Interest__c (before update) {
    
    // Before generating a new Deal record 
    // it changes (to Today value)the Conversion Date
    // of the current Interest record:
        DateTime dt = Date.Today();//  to beformated to Date
        Date dTod = Date.newInstance(dt.year(), dt.month(), dt.day());
    if ( Trigger.new[0].Status__c== 'Converted' &&
        Trigger.old[0].Status__c== 'New')   {
            Trigger.new[0].Converted_Date__c= dTod; 
    }

}